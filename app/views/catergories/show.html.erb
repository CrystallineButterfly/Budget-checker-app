<%= render "spendings/header" %>
<div class="d-flex flex-column justify-content-center align-items-center m-3 pt-3">
  <div class="card d-flex flex-column justify-content-center align-items-center m-3 pt-3" style="width: 18rem;">
    <div>
    <% if @catergory.icon %>
    <span class="material-symbols-outlined img">
      <%= @catergory.icon %>
      </span>
  </div>
  <% end %>
  <div class="card-body d-flex flex-column justify-content-center align-items-center">
    <h5 class="card-title badge text-bg-warning p-2 px-4"><%= @category.name %></h5>
    <p class="card-text">Total Amount Allotted: $ <%= @category.spendings.sum(:amount) %></p>
    <p class="card-text opacity-50"><%= time_ago_in_words(@category[:created_at]) %></p>
  </div>
</div>
<%= link_to "Add New Budget", new_catergory_spending_path(@catergory), class: "btn btn-success mb-5" %>
<% if @catergory.catergories.any? %>
<h1>All Allotted Budgets</h1>
    <%= render partial: 'spendings/spending_card', locals: { category: @category } %>
     <% else %>
    <h1>No Budgets Yet</h1>
<% end %>